<resources>
    
    <style name="LightAppThemeWithTransparentStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowBackground">@color/cardview_light_background</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="LightAppThemeWithTransparentStatusBar">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="SwitchStyle" >
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="colorSwitchThumbNormal"> @color/colorPrimaryDark</item>
        <item name="android:colorForeground">@color/colorPrimaryLight </item>
    </style>

    <style name="FullScreenAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowBackground">@color/cardview_light_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NormalAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowBackground">@color/cardview_light_background</item>
    </style>

    <style name="DialogStyle" parent="AlertDialog.AppCompat">
        <item name="android:background">@drawable/dialog_fragment_background</item>
    </style>

</resources>
