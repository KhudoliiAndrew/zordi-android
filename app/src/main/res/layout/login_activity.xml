<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/colorLoginBlue"
    android:orientation="vertical">

    <Button
        android:id="@+id/google_btn"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_above="@+id/facebook_btn_custom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_corner"
        android:textSize="15sp" />

    <Button
        android:id="@+id/facebook_btn_custom"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:background="@drawable/round_corner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp" />

    <ImageView
        android:id="@+id/google_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/google_btn"
        android:layout_alignTop="@+id/google_btn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/google_icon"
        android:elevation="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wth_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/google_btn"
        android:layout_alignTop="@+id/google_btn"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        android:text="@string/google_sign_in"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/facebook_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/facebook_btn_custom"
        android:layout_alignTop="@+id/facebook_btn_custom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/facebook_icon"
        android:elevation="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wth_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/facebook_btn_custom"
        android:layout_alignTop="@+id/facebook_btn_custom"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        android:text="@string/facebook_sign_in"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/google_btn"
        android:layout_below="@+id/gp_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="@string/sign_in"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:fontFamily="@font/bree_serif"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/gp_logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@color/colorGoogleRed" />
</RelativeLayout>