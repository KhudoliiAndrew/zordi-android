<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/colorLoginBlue"
    android:orientation="vertical">

    <Button
        android:id="@+id/google_btn"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="                 Sign in with Google"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/round_corner" />

    <Button
        android:id="@+id/facebook_btn_custom"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="             Sign in with Facebook"
        android:textSize="15sp"
        android:background="@drawable/round_corner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp" />

    <ImageView
        android:id="@+id/google_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/google_btn"
        android:layout_alignTop="@+id/google_btn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/google_icon"
        android:elevation="2dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/facebook_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/facebook_btn_custom"
        android:layout_alignTop="@+id/facebook_btn_custom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/facebook_icon"
        android:elevation="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="@string/log_in"
        android:textColor="#ffffff"
        android:textSize="60sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_btn"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />

 </RelativeLayout>