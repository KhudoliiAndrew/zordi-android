<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gp_logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@color/textColor" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/greeting_text"
        android:layout_below="@id/gp_logo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/textColorWhite"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/google_signIn_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Please login with"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/google_signIn_button"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_above="@id/facebook1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/menu_container_background"
        android:onClick="signIn"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/google_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/google_signIn_button"
        android:layout_alignTop="@id/google_signIn_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/google_icon"
        android:elevation="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wth_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/google_signIn_button"
        android:layout_alignTop="@id/google_signIn_button"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        android:text="Google"
        android:textSize="25sp" />

    <Button
        android:id="@+id/facebook1"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/menu_container_background"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/facebook_ic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/facebook1"
        android:layout_alignTop="@id/facebook1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/facebook_icon"
        android:elevation="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/wth_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/facebook1"
        android:layout_alignTop="@id/facebook1"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        android:text="Facebook"
        android:textSize="25sp" />

</RelativeLayout>