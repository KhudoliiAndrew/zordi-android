<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/steps_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:theme="@style/LightAppThemeWithTransparentStatusBar">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_information_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_background"
        android:elevation="15dp">

        <ImageView
            android:id="@+id/user_logo_google"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text=""
            android:textColor="@color/textColorWhite"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/user_logo_google"
            app:layout_constraintTop_toTopOf="@+id/user_logo_google" />

        <TextView
            android:id="@+id/user_email_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-2dp"
            android:text=""
            android:textColor="@color/textColorWhite"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/user_logo_google"
            app:layout_constraintTop_toBottomOf="@+id/user_name_google" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/user_logo_google"
            app:layout_constraintTop_toBottomOf="@+id/user_email_google"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/line_view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="170dp"
                android:background="@color/textColorWhite"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_below="@id/line_view"
                android:id="@+id/allow_geoposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show geolocation"
                android:textColor="@color/textColorWhite"
                android:textSize="20sp" />

            <android.support.v7.widget.SwitchCompat
                android:layout_below="@id/line_view"
                android:id="@+id/sleep_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchStyle"
                android:layout_toEndOf="@id/allow_geoposition"
                android:layout_marginStart="10dp"/>
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_information_container"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_container_background"
            android:elevation="20dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/friend_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:layout_toEndOf="@id/friend_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_below="@id/friend_name"
                android:background="@color/colorLine"
                android:layout_alignStart="@id/friend_logo"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/friend_logo"
                android:layout_below="@id/friend_name"
                android:layout_marginStart="25dp"
                android:id="@+id/steps_layout">

                <TextView
                    android:id="@+id/friend_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/textColor"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" steps"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:layout_toEndOf="@id/friend_steps"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/friend_logo"
                    android:layout_below="@id/steps_layout"
                    android:layout_marginStart="25dp">

                    <TextView
                        android:id="@+id/friend_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textColor="@color/textColor"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" of sleep"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        android:layout_toEndOf="@id/friend_sleep"
                        android:layout_marginTop="10dp" />

                </RelativeLayout>


            <ImageView
                android:id="@+id/friend_position"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_place_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>