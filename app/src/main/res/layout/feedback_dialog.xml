<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragment_background">

    <RelativeLayout
        android:id="@+id/view_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/steps_picker_background"
        android:elevation="20dp">

        <TextView
            android:id="@+id/donate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="21dp"
            android:gravity="center"
            android:text="You can contact us by mail"
            android:textColor="@color/textColor"
            android:textSize="23sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_feedback"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/go_to_email_btn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_background"
            android:text="Go to email"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/copy_button_feedback_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/go_to_email_btn"
            android:background="@drawable/ic_content_copy_white_24dp" />
    </RelativeLayout>

</RelativeLayout>